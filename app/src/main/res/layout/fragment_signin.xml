<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_dark_gray">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.matrixwarez.pt.view.ActionButtonView
                    android:id="@+id/sign_in_title"
                    android:layout_width="195dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            <TextView
                    android:id="@+id/old_pincode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/old_pincode_title"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toBottomOf="@id/status_text"
                    app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                    android:id="@+id/old_pincode_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLength="8"
                    android:imeOptions="actionDone"
                    android:background="@drawable/input_display_name_default"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@id/old_pincode_title"
                    app:layout_constraintRight_toRightOf="parent" />

            <TextView
                    android:id="@+id/pincode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pincode_title"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintTop_toBottomOf="@id/old_pincode_title"
                    app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                    android:id="@+id/pincode_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLength="8"
                    android:imeOptions="actionDone"
                    android:background="@drawable/input_display_name_default"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@id/pincode_title"
                    app:layout_constraintRight_toRightOf="parent" />

            <TextView
                    android:id="@+id/pincode_2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pincode_repeat_title"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintTop_toBottomOf="@id/pincode_title"
                    app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                    android:id="@+id/pincode_2_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLength="8"
                    android:imeOptions="actionDone"
                    android:background="@drawable/input_display_name_default"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@id/pincode_2_title"
                    app:layout_constraintRight_toRightOf="parent" />

            <Button
                    android:id="@+id/set_pincode_button"
                    android:text="Set pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/pincode_2_input" />

            <TextView
                    android:id="@+id/name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name_title"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toBottomOf="@id/status_text"
                    app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                    android:id="@+id/name_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLength="20"
                    android:imeOptions="actionDone"
                    android:background="@drawable/input_display_name_default"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@id/name_title"
                    app:layout_constraintRight_toRightOf="parent" />

            <TextView
                    android:id="@+id/pincode_title_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pincode_title"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintTop_toBottomOf="@id/name_title"
                    app:layout_constraintLeft_toLeftOf="parent" />

            <EditText
                    android:id="@+id/pincode_input_sign_in"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLength="8"
                    android:imeOptions="actionDone"
                    android:background="@drawable/input_display_name_default"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@id/pincode_title_sign_in"
                    app:layout_constraintRight_toRightOf="parent" />

            <Button
                    android:id="@+id/sign_in_button_2"
                    android:text="Sign In"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@id/pincode_input_sign_in" />

            <View
                    android:id="@+id/bottom_view_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_constraintTop_toBottomOf="@id/set_pincode_button" />

            <View
                    android:id="@+id/bottom_view_signin"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_constraintTop_toBottomOf="@id/sign_in_button_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.matrixwarez.pt.view.ActionButtonFrame
            android:id="@+id/back_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <com.matrixwarez.pt.view.ActionButtonView
                android:id="@+id/back_action"
                android:layout_width="49dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:layout_gravity="start|top" />

    </com.matrixwarez.pt.view.ActionButtonFrame>

</androidx.constraintlayout.widget.ConstraintLayout>