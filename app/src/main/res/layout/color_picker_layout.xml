<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/color_picker_action_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <com.ericversteeg.radiofrost.colorpicker.SBPalette
                android:id="@+id/sb_palette"
                android:layout_width="200dp"
                android:layout_height="200dp" />

        <com.ericversteeg.radiofrost.colorpicker.HPalette
                android:id="@+id/h_palette"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="15dp" />

        <LinearLayout
                android:id="@+id/linear_layout_text_container"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="visible">

            <TextView
                    android:id="@+id/hue_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:textColor="#FFF"
                    android:gravity="center" />

            <TextView
                    android:id="@+id/saturation_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:textColor="#FFF"
                    android:gravity="center" />

            <TextView
                    android:id="@+id/brightness_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="14dp"
                    android:textColor="#FFF"
                    android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <com.ericversteeg.radiofrost.colorpicker.SBIndicator
            android:id="@+id/sb_indicator"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    <com.ericversteeg.radiofrost.colorpicker.HIndicator
            android:id="@+id/h_indicator"
            android:layout_width="3dp"
            android:layout_height="15dp" />
</FrameLayout>