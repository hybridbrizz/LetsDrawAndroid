<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_2">

    <com.ericversteeg.liquidocean.view.ButtonFrame
            android:id="@+id/back_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
                android:id="@+id/back_action"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="17dp"
                android:layout_gravity="start|top"
                android:src="@drawable/ic_back" />

    </com.ericversteeg.liquidocean.view.ButtonFrame>

    <com.ericversteeg.liquidocean.view.ButtonFrame
            android:id="@+id/add_button"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageView
                android:id="@+id/add_action"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="17dp"
                android:layout_gravity="end|top"
                android:src="@drawable/ic_add" />

    </com.ericversteeg.liquidocean.view.ButtonFrame>

    <com.ericversteeg.liquidocean.view.ArtView
            android:id="@+id/art_showcase"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/menu_button_container_horizontal_spacer" />

    <FrameLayout
            android:id="@+id/menu_button_container_horizontal_spacer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:id="@+id/menu_button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="40dp">

            <com.ericversteeg.liquidocean.view.ButtonFrame
                    android:id="@+id/connect_button"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                <TextView
                        android:id="@+id/connect_menu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="38dp"
                        android:textColor="#DDFFFFFF"
                        android:gravity="center_vertical"
                        android:text="@string/connect_menu_title"
                        android:shadowColor="#7F000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="4" />

            </com.ericversteeg.liquidocean.view.ButtonFrame>

            <com.ericversteeg.liquidocean.view.ButtonFrame
                    android:id="@+id/options_button"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                <TextView
                        android:id="@+id/options_menu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="38dp"
                        android:textColor="#DDFFFFFF"
                        android:gravity="center_vertical"
                        android:text="@string/options_menu_title"
                        android:shadowColor="#7F000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="4" />

            </com.ericversteeg.liquidocean.view.ButtonFrame>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/stats_button_container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/stats_button_bottom_layer"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/stats_button"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.ericversteeg.liquidocean.view.ButtonFrame
                    android:id="@+id/howto_button"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="30dp">

                <TextView
                        android:id="@+id/how_to_menu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="38dp"
                        android:textColor="#DDFFFFFF"
                        android:gravity="center"
                        android:text="@string/how_to_menu_title"
                        android:shadowColor="#7F000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="4" />

            </com.ericversteeg.liquidocean.view.ButtonFrame>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/single_button_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone">

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/single_button_bottom_layer"
                        android:layout_width="220dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/single_button"
                        android:layout_width="220dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/world_button_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone">

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/world_button_bottom_layer"
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/world_button"
                        android:layout_width="210dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dev_button_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone">

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/dev_button_bottom_layer"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/dev_button"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.ericversteeg.liquidocean.view.ButtonFrame
                    android:id="@+id/lefty_button"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="30dp">

                <TextView
                        android:id="@+id/lefty_menu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="38dp"
                        android:textColor="#DDFFFFFF"
                        android:gravity="center"
                        android:text="@string/lefty_menu_title"
                        android:shadowColor="#7F000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="4" />

            </com.ericversteeg.liquidocean.view.ButtonFrame>

            <com.ericversteeg.liquidocean.view.ButtonFrame
                    android:id="@+id/righty_button"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="30dp">

                <TextView
                        android:id="@+id/righty_menu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="38dp"
                        android:textColor="#DDFFFFFF"
                        android:gravity="center"
                        android:text="@string/righty_menu_title"
                        android:shadowColor="#7F000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="4" />

            </com.ericversteeg.liquidocean.view.ButtonFrame>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/empty_button_1_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone">

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/empty_button_1_bottom_layer"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/empty_button_1"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/empty_button_2_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:visibility="gone">

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/empty_button_2_bottom_layer"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

                <com.ericversteeg.liquidocean.view.ActionButtonView
                        android:id="@+id/empty_button_2"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/connect_input_container"
                    android:visibility="gone"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="30dp">

                <EditText
                        android:id="@+id/input_access_key"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="16sp"
                        android:textCursorDrawable="@null"
                        android:inputType="textCapCharacters"
                        android:imeOptions="actionDone"
                        android:textColor="#FFF" />

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_add_server"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/input_access_key"
                        android:text="Add Server" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_servers"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

        </LinearLayout>

    </FrameLayout>

    <View
            android:id="@+id/pixel_view_1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_6"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    <View
            android:id="@+id/pixel_view_7"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>